        android:theme="@style/AppTheme">
        <activity android:name=".Servers">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddServer" />
        <activity
            android:name=".pages.notices.NoticesPage"
            android:label="@string/title_activity_server_page"
            android:parentActivityName=".Servers"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheasmith.me.betterkamar.Servers" />
        </activity>
        <activity
            android:name=".pages.groups.Groups"
            android:label="@string/title_activity_groups"
            android:parentActivityName=".Servers"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheasmith.me.betterkamar.Servers" />
        </activity>
        <activity
            android:name=".pages.ncea.NCEA"
            android:label="@string/title_activity_server_page"
            android:parentActivityName=".Servers"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheasmith.me.betterkamar.Servers" />
        </activity>
        <activity
            android:name=".pages.reports.Reports"
            android:label="@string/title_activity_groups"
            android:parentActivityName=".Servers"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheasmith.me.betterkamar.Servers" />
        </activity>
        <activity
            android:name=".pages.reports.PDFViewer"
            android:label="@string/title_activity_groups"
            android:parentActivityName=".Servers"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="sheasmith.me.betterkamar.Servers" />
        </activity>
    </application>

</manifest>