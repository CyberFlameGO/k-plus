<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sheasmith.me.betterkamar">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <application
        android:name=".KamarPlusApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="0f73ef781806f32d7cd8ed58bc3925758ed50644" />

        <activity
            android:name=".pages.portals.PortalActivity"
            android:theme="@style/AppTheme.Launcher"
            android:label="@string/app_name">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.addPortal.AddPortalActivity"
            android:label="Add New Portal"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.editPortal.EditPortalActivity"
            android:label="Add New Portal"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".pages.DataActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/notices" />
        <activity android:name=".pages.results.PDFViewer" />
        <activity android:name=".pages.about.AboutActivity"></activity>
    </application>

</manifest>