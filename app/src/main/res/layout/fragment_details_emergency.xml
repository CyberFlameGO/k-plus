<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/emergency"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/emergency_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/emergency_home_phone_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Phone" />

                <TextView
                    android:id="@+id/emergency_home_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="0800 123 4567"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/emergency_mobile_phone_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Phone" />

                <TextView
                    android:id="@+id/emergency_mobile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="027 123 4567"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/emergency_work_phone_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Phone" />

                <TextView
                    android:id="@+id/emergency_work_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="03 230 4567"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/emergency_extension_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extension" />

                <TextView
                    android:id="@+id/emergency_extension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="256"
                    android:textColor="@android:color/black" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>